<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".WelcomeActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/elephant">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="270pt"
                android:fontFamily="@font/poppins_medium"
                android:text="Ready to"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold|normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="290pt"
                android:fontFamily="@font/poppins_medium"
                android:text="watch ?"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold|normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="320pt"
                android:fontFamily="@font/poppins_medium"
                android:text="Warmly welcome our smart society.Would you like to communicate with a smart assistant while watching the animals?"
                android:textColor="@color/white"
                android:textSize="19.3sp"
                android:textStyle="bold|normal" />

            <TextView
                android:id="@+id/btnenjoy"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="370pt"
                android:fontFamily="@font/poppins_medium"
                android:text="Start Enjoying"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="19.3sp"
                android:textStyle="bold|normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>